from datetime import datetime, date, time, timedelta


ahora = datetime.now() 
hora_actual = time(ahora.hour, ahora.minute, ahora.second)
mas_5m = ahora + timedelta(seconds=300)
mas_5m = time(mas_5m.hour, mas_5m.minute, mas_5m.second)
racion_de_5h = timedelta(hours=5)
mas_5h = ahora + racion_de_5h
print("Hora actual:", ahora)
print("Hora actual:", hora_actual)
print("Hora actual + 5 minutos:", mas_5m)
print("Hora actual + 5 horas:", mas_5h)


InicioTiempo= datetime.now()
NumeroDeSemana= InicioTiempo.isoweekday()
cincoMinDespues= InicioTiempo + timedelta(minutes=5)
doshraDespues= InicioTiempo + timedelta(hours=2)
print("Hora actual:", InicioTiempo)
print("Hora actual + 5 minutos:", cincoMinDespues)
print("Hora actual +  2 horas:", doshraDespues)
print("numero semana:", NumeroDeSemana)
day= InicioTiempo.day
month= InicioTiempo.month

